{
    "name": "__NAME__",
    "description": "Skillset to chunk documents and generate embeddings",
    "skills": [
        {
            "@odata.type": "#Microsoft.Skills.Text.SplitSkill",
            "name": "#1",
            "description": "Split skill to chunk document",
            "context": "/document",
            "defaultLanguageCode": "en",
            "textSplitMode": "pages",
            "maximumPageLength": 2000,
            "pageOverlapLength": 500,
            "inputs": [
                {
                    "name": "text",
                    "source": "/document/content"
                }
            ],
            "outputs": [
                {
                    "name": "textItems",
                    "targetName": "pages"
                }
            ]
        },
        {
            "@odata.type": "#Microsoft.Skills.Text.AzureOpenAIEmbeddingSkill",
            "name": "#2",
            "context": "/document/pages/*",
            "resourceUri": "__RESOURCE_URI__",
            "apiKey": "__API_KEY__",
            "deploymentId": "__DEPLOYMENT_ID__",
            "inputs": [
                {
                    "name": "text",
                    "source": "/document/pages/*"
                }
            ],
            "outputs": [
                {
                    "name": "embedding",
                    "targetName": "text_vector"
                }
            ]
        },
        {
            "@odata.type": "#Microsoft.Skills.Vision.VectorizeSkill",
            "name": "#3",
            "description": "An AI Services Vision vectorization skill for images",
            "context": "/document/normalized_images/*",
            "modelVersion": "2023-04-15",
            "inputs": [
                {
                    "name": "image",
                    "source": "/document/normalized_images/*",
                    "inputs": []
                }
            ],
            "outputs": [
                {
                    "name": "vector",
                    "targetName": "image_vector"
                }
            ]
        }
    ],
    "cognitiveServices": {
        "@odata.type": "#Microsoft.Azure.Search.CognitiveServicesByKey",
        "description": "AI Services",
        "key": "__COGNITIVE_KEY__"
    },
    "indexProjections": {
        "selectors": [
            {
                "targetIndexName": "__INDEX_NAME__",
                "parentKeyFieldName": "text_parent_id",
                "sourceContext": "/document/pages/*",
                "mappings": [
                    {
                        "name": "text_vector",
                        "source": "/document/pages/*/text_vector",
                        "inputs": []
                    },
                    {
                        "name": "chunk",
                        "source": "/document/pages/*",
                        "inputs": []
                    },
                    {
                        "name": "title",
                        "source": "/document/metadata_storage_name",
                        "inputs": []
                    }
                ]
            },
            {
                "targetIndexName": "__INDEX_NAME__",
                "parentKeyFieldName": "image_parent_id",
                "sourceContext": "/document/normalized_images/*",
                "mappings": [
                    {
                        "name": "image_vector",
                        "source": "/document/normalized_images/*/image_vector",
                        "inputs": []
                    },
                    {
                        "name": "title",
                        "source": "/document/metadata_storage_name",
                        "inputs": []
                    }
                ]
            }
        ],
        "parameters": {
            "projectionMode": "skipIndexingParentDocuments"
        }
    }
}